<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>book</servlet-name>
        <servlet-class>book</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Catalog</servlet-name>
        <servlet-class>book.Catalog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogItem</servlet-name>
        <servlet-class>book.CatalogItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogPage</servlet-name>
        <servlet-class>book.CatalogPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemOrder</servlet-name>
        <servlet-class>book.ItemOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KidsBooksPage</servlet-name>
        <servlet-class>book.KidsBooksPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderPage</servlet-name>
        <servlet-class>book.OrderPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TechBooksPage</servlet-name>
        <servlet-class>book.TechBooksPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShoppingCart</servlet-name>
        <servlet-class>book.ShoppingCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>book</servlet-name>
        <url-pattern>/book</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Catalog</servlet-name>
        <url-pattern>/Catalog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogItem</servlet-name>
        <url-pattern>/CatalogItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CatalogPage</servlet-name>
        <url-pattern>/CatalogPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemOrder</servlet-name>
        <url-pattern>/ItemOrder</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KidsBooksPage</servlet-name>
        <url-pattern>/KidsBooksPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderPage</servlet-name>
        <url-pattern>/OrderPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TechBooksPage</servlet-name>
        <url-pattern>/TechBooksPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShoppingCart</servlet-name>
        <url-pattern>/ShoppingCart</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
